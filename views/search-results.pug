extends layout

block content
    h1= `Search Results for "${search}"`
    p
    table
        tr 
            th Title
            th Author 
            th Genre 
            th Year
        for  book in  books
            tr 
            td 
                a(href=`books/${ book.id}`) !{ book.title}

            td=  book.author

            td=  book.genre 

            td=  book.year
    p
    a(class='button' href='../books') Back